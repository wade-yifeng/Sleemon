<div class="questionnaire-detail">
    <div class="page-header">
        <h1>知识详情</h1>
    </div>

    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right">
                标题
            </label>
            <div class="col-sm-6">
                <p class="alert alert-success col-xs-12 col-sm-9" ng-bind="knowledge.Title"></p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right">
                内容
            </label>
            <div class="col-sm-6">
                <p class="alert alert-success col-xs-12 col-sm-9" ng-bind="knowledge.Detail"></p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right">
                分类
            </label>
            <div class="col-sm-4">
                 <p class="alert alert-success col-xs-12 col-sm-9" ng-bind="getEnumByValue(Enum.KnowledgeCategory, knowledge.KnowledgeCategory).Value"></p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right">
                关键字
            </label>
            <div class="col-sm-9">
                <span class="label label-xlg label-primary arrowed arrowed-right" ng-repeat="keyword in knowledge.Keywords" style="margin-left:3px">
                    {{keyword.Word}}
                </span>
            </div>
        </div>

        <div class="clearfix form-actions">
            <div class="col-md-offset-3 col-md-9">
                <button class="btn btn-success" type="button" ui-sref="Graphics.Knowledge"> 返回知识库列表</button>
            </div>
        </div>
    </form>
</div>