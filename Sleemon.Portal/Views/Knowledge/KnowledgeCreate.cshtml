<div>
    <div class="page-header">
        <h1>新增/编辑 知识 <small><i class="ace-icon fa fa-angle-double-right"></i> 请填写知识基本信息</small></h1>
    </div>
    <uib-alert type="danger" close="alert.close(0)" ng-if="error" >
        <strong><i class="ace-icon fa fa-times"></i> 操作失败!</strong>
        {{error}}.
    </uib-alert>
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right">
                标题
            </label>
            <div class="col-sm-6">
                <input type="text" placeholder="请填写标题" class="col-xs-12" ng-model="knowledge.Title" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right">
                内容
            </label>
            <div class="col-sm-6">
                <textarea input-limiter maxlength="200" class="col-xs-12" placeholder="请填写内容" style="height: 80px" ng-model="knowledge.Detail"></textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right">
                分类
            </label>
            <div class="col-sm-4">
                <select class="form-control" name="KnowledgeCategory" ng-model="knowledge.KnowledgeCategory" required
                            ng-options="v.Key as v.Value for (k,v) in Enum.KnowledgeCategory">
                    <option value="">--请选择--</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 control-label no-padding-right">
                关键字
            </label>
            <div class="col-sm-9">
                <select chosen ng-model="knowledge.Keywords" ng-options="keyword.Word for keyword in keywords track by keyword.Id" multiple class="chosen-select form-control" ng-class="{'tag-input-style': false}" data-placeholder="请选择关键字...">
                </select>
            </div>
        </div>

        <div class="clearfix form-actions">
            <div class="col-md-offset-3 col-md-9">
                <button class="btn btn-info" type="button" ng-click="submitKnowledge()"><i class="ace-icon fa fa-check bigger-110"></i> 发布</button>
                &nbsp;&nbsp;
                <button class="btn btn-success" type="button" ui-sref="Graphics.Knowledge"> 返回知识库列表</button>
            </div>
        </div>
    </form>
</div>