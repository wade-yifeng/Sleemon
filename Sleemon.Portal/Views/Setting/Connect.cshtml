<div class="row">
    <div class="col-xs-12 col-sm-4" style="padding-left:5px; padding-right:0px">
        <div class="widget-box widget-color-blue2">
            <div class="widget-header">
                <h4 class="widget-title lighter smaller">组织架构</h4>
            </div>
            <div class="widget-body">
                <div class="widget-main padding-8">
                    <div treecontrol tree-model="treeData" options="treeOptions" selected-node="selected" on-selection="showSelected(node)">
                        {{node.label}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-8" style="padding-left: 5px; padding-right:5px">
        <div class="widget-box widget-color-blue2">
            <div class="widget-header">
                <h4 class="widget-title lighter smaller" ng-bind="Department"></h4>
            </div>
            @Html.AntiForgeryToken()
            <table datatable="" dt-options="dtOptions" dt-instance="dtInstance" dt-columns="dtColumns" class="table table-striped table-bordered table-hover row-border hover">
            </table>
        </div>
    </div>
</div>