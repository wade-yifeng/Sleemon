<div class="page-header">
    <h1>
        资讯管理
        <small><i class="ace-icon fa fa-angle-double-right"></i> 资讯列表</small>
    </h1>
</div>

<div>
    <div class="nav-search">
        <button class="btn btn-sm btn-danger" style="height:36px;margin-right:0px" ui-sref="Graphics.Notice.Create">
            <i class="ace-icon glyphicon glyphicon-plus"></i> 新建资讯
        </button>
    </div>
    <div class="table-header">
        资讯列表筛选结果
    </div>

    <table datatable="ng" dt-options="dtOptions" dt-column-defs="dtColumnDefs"
           class="table table-striped table-bordered table-hover row-border hover">
        <thead>
            <tr>
                <th>序号</th>
                <th>标题</th>
                <th>显示方式</th>
                <th>资讯类型</th>
                <th>简介</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <tr ng-repeat="item in list" ng-class="{'selected': domain.selected}">
                <td ng-bind="$index"></td>
                <td ng-bind="item.Subject"></td>
                <td ng-bind="getEnumByValue(Enum.NoticeCategory,item.Category).Value"></td>
                <td ng-bind="getEnumByValue(Enum.NoticeType,item.NoticeType).Value"></td>
                <td ng-bind="item.Summary"></td>
                <td>
                    <div class='hidden-sm hidden-xs action-buttons'>
                        <a @* ng-if="item.lastupdateuser= =@ViewBag.UserUniqueId" *@
                           class="green" ui-sref="Graphics.Notice.Create({noticeId: {{item.Id}}})">
                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                        </a>
                        <a @* ng-if="item.lastupdateuser= =@ViewBag.UserUniqueId" *@
                           class="red"><i class="ace-icon fa fa-trash-o bigger-130"></i></a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>