@using Sleemon.Common
<div class="page-header">
    <h1>知识库 <small><i class="ace-icon fa fa-angle-double-right"></i> 知识列表</small></h1>
</div>

<div>
    <div class="nav-search">
        <button class="btn btn-sm btn-danger" style="height:36px;margin-right:0px" ui-sref="Graphics.Knowledge.Create">
            <i class="ace-icon glyphicon glyphicon-plus"></i> 新增知识
        </button>
    </div>
    <div class="table-header">
        知识列表筛选结果
    </div>

    <table datatable="ng" dt-options="dtOptions" dt-column-defs="dtColumnDefs" class="table table-striped table-bordered table-hover row-border hover">
        <thead>
            <tr>
                <th>标题</th>
                <th>分类</th>
                <th>更新人</th>
                <th><i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>更新时间</th>
                <th>操作</th>
            </tr>
        </thead>

        <tbody>

            <tr ng-repeat="comment in ::comments" ng-class="{'selected': domain.selected}">
                <td ng-bind="comment.Comment"></td>
                <td ng-bind="getEnumByValue(Enum.LinkedCategory, comment.Category).Value"></td>
                <td ng-bind="comment.Name"></td>
                <td ng-bind="comment.CommentTime | date: 'yyyy-MM-dd'"></td>
                <td>
                    <div class='hidden-sm hidden-xs action-buttons'>
                        <a class="green" ng-click="updateLegalStatus(comment.Id, Enum.LegalStatus.Legal.Key)"><i class="ace-icon fa fa-check bigger-130"></i></a>
                        <a class="red" ng-click="updateLegalStatus(comment.Id, Enum.LegalStatus.Illegal.Key)"><i class="ace-icon fa fa-close bigger-130"></i></a>
                    </div>
                </td>
            </tr>

        </tbody>
    </table>
</div>